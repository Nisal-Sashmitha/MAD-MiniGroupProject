<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/student_search_item_inner_padding_top_bottom"
    android:layout_marginBottom="@dimen/student_search_item_inner_padding_top_bottom"
    android:background="@drawable/student_items_lists_backgrund"
    android:orientation="vertical">


    <TextView
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/student_form_input_inner_padding_left"
        android:layout_marginTop="@dimen/student_search_item_inner_padding_top_bottom"
        android:layout_marginBottom="@dimen/student_search_item_inner_padding_top_bottom"
        android:text="Nisal Sashmitha"
        android:textColor="@color/white"
        android:textSize="@dimen/student_normal_text_size"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/student_search_details_studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/student_form_input_inner_padding_left"
        android:layout_marginBottom="@dimen/student_search_item_inner_padding_top_bottom"
        android:text="0001"
        android:textColor="@color/white"
        android:textSize="18sp">

    </TextView>


</LinearLayout>